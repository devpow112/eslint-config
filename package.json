{
  "name": "@devpow112/eslint-config",
  "version": "2.0.0",
  "description": "Shareable eslint configuration",
  "keywords": [
    "eslint-config"
  ],
  "homepage": "https://github.com/devpow112/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/devpow112/eslint-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devpow112/eslint-config.git"
  },
  "license": "MIT",
  "author": "Devon Powell <devon.f.powell@gmail.com>",
  "exports": {
    "./node.js": "./src/node.js",
    "./node": "./src/node.js",
    "./test.js": "./src/test.js",
    "./test": "./src/test.js"
  },
  "files": [
    "src/**/*.js"
  ],
  "scripts": {
    "lint": "run-s -s lint:git lint:js lint:md lint:pkg",
    "lint:js": "eslint .",
    "lint:md": "markdownlint .",
    "lint:git": "commitlint --from origin/main --to HEAD",
    "lint:pkg": "sort-package-json --check",
    "format": "run-s -s format:js format:md format:pkg",
    "format:js": "npm run -s lint:js -- --fix",
    "format:md": "npm run -s lint:md -- --fix",
    "format:pkg": "sort-package-json"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@devpow112/commitlint-config": "^2.0.0",
    "@devpow112/semantic-release-config": "^2.1.2",
    "eslint": "^8.39.0",
    "eslint-plugin-import": "^2.27.5",
    "markdownlint-cli": "^0.33.0",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^21.0.1",
    "sort-package-json": "^2.4.1"
  },
  "peerDependencies": {
    "eslint": "^8",
    "eslint-plugin-chai-friendly": "^0.7",
    "eslint-plugin-import": "^2",
    "eslint-plugin-mocha": "^10"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
