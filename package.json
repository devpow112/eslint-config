{
  "name": "@devpow112/eslint-config",
  "version": "1.1.2",
  "description": "Shareable eslint configuration",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "run-s -s lint:git lint:js lint:md",
    "lint:js": "eslint .",
    "lint:md": "markdownlint .",
    "lint:git": "commitlint --from origin/main --to HEAD",
    "format": "run-s -s format:js format:md",
    "format:js": "npm run -s lint:js -- --fix",
    "format:md": "npm run -s lint:md -- --fix"
  },
  "exports": {
    "./node": "./src/node.js",
    "./node.js": "./src/node.js",
    "./node-config": "./src/node.js",
    "./node-config.js": "./src/node.js",
    "./test": "./src/test.js",
    "./test.js": "./src/test.js",
    "./test-config": "./src/test.js",
    "./test-config.js": "./src/test.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devpow112/eslint-config.git"
  },
  "keywords": [
    "eslint-config"
  ],
  "author": "Devon Powell <devon.f.powell@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devpow112/eslint-config/issues"
  },
  "homepage": "https://github.com/devpow112/eslint-config#readme",
  "files": [
    "src/**/*.js"
  ],
  "engines": {
    "node": ">=14.19.3",
    "npm": ">=6.14.17"
  },
  "peerDependencies": {
    "eslint": "^8.16.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@devpow112/commitlint-config": "^1.0.0",
    "@devpow112/semantic-release-config": "^1.1.0",
    "markdownlint-cli": "^0.31.1",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^19.0.2"
  }
}
